#!/bin/sh

# execute scripts in xinitrc.d
if [ -d '/etc/X11/xinit/xinitrc.d' ]
then
	for f in '/etc/X11/xinit/xinitrc.d/'*'.sh'
	do
		[ -x "$f" ] && . "$f"
	done
	unset f
fi

# policy kit
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# xresources
[ -f "${XDG_CONFIG_HOME:-"$HOME/.config"}/X11/Xresources" ] && xrdb "${XDG_CONFIG_HOME:-"$HOME/.config"}/X11/Xresources"

# compositor
picom &

# wallpaper
#xwallpaper --zoom "$HOME/pics/walls/green.jpg" &
hsetroot

# blue light filter
bright_blue_light_filter

# status bar
dwmblocks &

# notifications
dunst &

# automatic screen locking
toggle_xautolock

# remove mouse when idle
unclutter --timeout 30 &

# character repetition rate
xset -r rate 300 50 &

# start dwm
while :
do
	dwm >/dev/null 2>&1
done
